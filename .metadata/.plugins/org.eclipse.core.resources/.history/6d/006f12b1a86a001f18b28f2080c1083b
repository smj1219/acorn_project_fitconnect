package com.example.fitconnect.repository;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

@Repository
public class ExerciseListDaoImpl implements ExerciseListDao {

	@Autowired private SqlSession session;
	
	@Override
	public List<ExerciseListDto> getExerList() {
		return session.selectList("ExerciseList.getAll");
	}

	@Override
	public ExerciseListDto getDetail(int exerciseId) {
		return session.selectOne("ExerciseList.getDetail", exerciseId);
	}

	@Override
	public List<ExerciseListDto> getcategory(String exerciseCate) {
		return session.selectList("ExerciseList.getCategory", exerciseCate);
	}

}
