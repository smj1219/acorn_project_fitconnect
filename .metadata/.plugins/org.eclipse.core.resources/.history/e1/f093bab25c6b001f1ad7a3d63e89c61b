<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TrainerCalendar">
	<sql id="column">
		t_calrendar_id, member_num, TO_CHAR(date, 'YYYY-MM-DD HH24:MI') as regdate
	</sql>
	<sql id="memberColumn">
		member_num, member_height, member_weight, member_gender, member_plan, weeklyplan
	</sql>

	<select id="getList" resultType="com.example.fitconnect.dto.TrainerCalendarDto" parameterType="int">
		SELECT t_calrendar_id, member_num, trainer_num TO_CHAR(regdate, 'YYYY-MM-DD HH24:MI') as regdate
		FROM trainercalendar
		WHERE trainer_num=#{trainerNum}
	</select>
	<select id="getSchedule" resultType="com.example.fitconnect.dto.TrainerCalendarDto" parameterType="int">
		SELECT  t_calrendar_id, member_num, TO_CHAR(regdate, 'YYYY-MM-DD HH24:MI') as regdate
		FROM trainercalendar
		WHERE t_calrendar_id=#{calenderId}
	</select>
	<insert id="insert" parameterType="com.example.fitconnect.dto.TrainerCalendarDto">
		INSERT INTO trainercalendar
		(t_calrendar_id, member_num, regdate)
		VALUES(trainercalendar_seq.NEXTVAL, #{memberNum}, TO_DATE(#{regdate}, 'YYYY-MM-DD HH24:MI'))
	</insert>
	<update id="update" parameterType="com.example.fitconnect.dto.TrainerCalendarDto">
		UPDATE trainercalendar
		SET member_num=#{MemberNum}, regdate=#{regdate}, 'YYYY-MM-DD HH24:MI')
		WHERE t_calrendar_id=#{calenderId}
	</update>
	<delete id="delete" parameterType="int">
		DELETE FROM trainercalendar
		WHERE t_calrendar_id=#{calenderId}
	</delete>
	
	
	
	
	<select id="getMember" resultType="com.example.fitconnect.dto.MemberDto" parameterType="com.example.fitconnect.dto.MemberDto">
		SELECT memberinfo.member_num, member_height, member_weight, member_gender, member_plan, weeklyplan, name
		FROM memberinfo, fit_user
		WHERE memberinfo.member_num = fit_user.member_num
		and member_num=#{memberNum}
	</select>
	<select id="getMemberAll" resultType="com.example.fitconnect.dto.MemberDto" parameterType="int" >
		SELECT memberinfo.member_num, name
		FROM memberinfo, fit_user
		WHERE memberinfo.member_num = fit_user.member_num
		and trainer_num=#{trainerNum}
		ORDER BY name ASC
	</select>
	<select id="getUserName" resultType="String" parameterType="int">
		SELECT name
		FROM fit_user
		WHERE member_num=#{memberNum}
	</select>
	<delete id="disconnect" parameterType="int">
		DELETE FROM memberinfo
		WHERE member_num=#{memberNum}
		and trainer_num
	</delete>
</mapper>