<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ExerciseList">
	<sql id="column">
		exercise_id, exercise_name, exercise_category, exercise_info, saveImage
	</sql>
	<select id="getAll" resultType="com.example.fitconnect.dto.ExerciseListDto">
		SELECT <include refid="column"/>
		From exerciseList
		ORDER BY exercise_id ASC
	</select>
	<select id="getDetail" resultType="com.example.fitconnect.dto.ExerciseListDto" parameterType="int">
		SELECT <include refid="column"/>
		FROM exerciselist
		WHERE exercise_id =#{exercise_id }
	</select>
	<select id="getCategory" resultType="com.example.fitconnect.dto.ExerciseListDto" parameterType="String">
		SELECT <include refid="column"/>
		FROM exerciselist
		WHERE exercise_category=#{exercise_category}
	</select>
</mapper>